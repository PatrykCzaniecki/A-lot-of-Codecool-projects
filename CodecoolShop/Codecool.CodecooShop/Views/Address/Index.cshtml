@{
    ViewData["Title"] = "Checkout";
}
@model Domain.Address
<h4>Checkout - personal data and address</h4>

<p>Provide your data:</p>

<div class="content" style="width: 60%;">
    <form asp-action="Index" asp-controller="Address">
        <div class="mb-3">
            <label asp-for="Street" class="form-label"></label>
            <input type="text" asp-for="Street" size="11" class="form-control" placeholder="Street" maxlength="35" required/>
            <span asp-validation-for="Street" class="form-text"></span>
        </div>
        <div class="mb-3">
            <label asp-for="City" class="form-label"></label>
            <input type="text" asp-for="City" size="11" class="form-control" placeholder="City" maxlength="30" required/>
            <span asp-validation-for="City" class="form-text"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Country" class="form-label"></label>
            <input type="text" asp-for="Country" size="11" class="form-control" placeholder="Country" maxlength="30" required/>
            <span asp-validation-for="Country" class="form-text"></span>
        </div>
        <div class="mb-3">
            <label asp-for="FullName" class="form-label"></label>
            <input type="text" asp-for="FullName" class="form-control" placeholder="Full name" maxlength="35" required/>
            <span asp-validation-for="FullName" class="form-text"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Email" class="form-label"></label>
            <input type="text" asp-for="Email" size="23" class="form-control" placeholder="jan.kowalski@@gmail.com" required pattern=".+@@.+.com" required/>
            <span asp-validation-for="Email" class="form-text"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Phone" class="form-label"></label>
            <input type="tel" asp-for="Phone" size="11" class="form-control" pattern="[0-9]{3}-[0-9]{3}-[0-9]{3}" maxlength="11" placeholder="123-452-678" required/>
            <span asp-validation-for="Phone" class="form-text"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Zip" class="form-label"></label>
            <input type="text" asp-for="Zip" size="6" class="form-control" pattern="[0-9]{2}-[0-9]{3}" maxlength="6" placeholder="60-400" required/>
            <span asp-validation-for="Zip" class="form-text"></span>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>